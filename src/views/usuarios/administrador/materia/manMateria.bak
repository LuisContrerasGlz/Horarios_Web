{{#if name}} 
    <!DOCTYPE html>
    <html lang="es">
        <head>
            <script src="https://cdn.tailwindcss.com"></script><!--sirve para usar tailwind-->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        </head>

        <body class="bg-indigo-200">

            <div>
                <a href="/renderManMateria" class="font-semibold text-4xl hover:text-gray-400 flex justify-center m-5">Docentes</a>

                <div class="flex justify-center m-5">
                    <div class="overflow-x-auto max-h-60">
                        <table class="w-full">
                            <thead>
                                <tr>
                                    <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">MATERIA</th>
                                    <th class="px-6 py-2 bg-gray-400 border border-b-2 border-gray-500">DESC.CORTA.</th>
                                    <th class="px-6 py-2 bg-gray-400 border border-b-2 border-gray-500">SEM.</th>
                                    <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">HRS.</th>
                                    <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">ACADEMIA</th>
                                    <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">ESTATUS</th>
                                    <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">EDITAR</th>
                                    <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">BORRAR</th>                                  
                                </tr>
                            </thead>
                            <tbody>
                                id {{datos.status}}
                                {{#each datos}}
                                    <tr>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center">{{this.nombre_materia}}</td>
                                        <td class="px-6 py-2 bg-gray-100 border border-gray-600">{{this.nombre_corto}}</td>
                                        <td class="px-6 py-2 bg-gray-100 border border-gray-600">{{this.semestre}}</td>
                                        <td class="px-6 py-2 bg-gray-100 border border-gray-600">{{this.horas}}</td>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.nombre_academia}}</td>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.status_materia}}</td>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center"><a href="/ediMateria?id={{this.id_materia}}"><svg class="h-8 w-10 text-gray-600"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4l-10.5 10.5v4" />  <line x1="13.5" y1="6.5" x2="17.5" y2="10.5" /></svg></a></td> 

                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center">
                                        <a href="/borMateria?id={{this.id_materia}}" onclick="return confirm('¿Estás seguro de eliminar la materia?');">
                                            <svg class="h-8 w-10 text-red-600" width="24" height="24" viewBox="0 0 24 24"
                                                stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" />
                                            <path d="M4 7h16" />
                                            <path d="M10 11v6" />
                                            <path d="M14 11v6" />
                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                            <path d="M9 7v-3h6v3" />
                                            </svg>
                                        </a>
                                        </td>

                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card">
                    {{#if modificar}}
                        <h2  class="font-semibold font-mono text-4xl flex justify-center m-5">Modifica Materia<h2/>
                    {{else}}
                        <h2  class="font-semibold text-4xl flex justify-center m-5">Alta de Materia<h2/> 
                    {{/if}}
                </div>

                <div class="mx-auto my-8 p-4 bg-white w-full sm:w-5/6 md:w-4/6 lg:w-2/3 xl:w-1/2 border rounded-lg shadow-lg">
                    <div class="card-body">
                        <form action="/manipulaMateria" method="POST" >
                            <input type="text" name="id_materia" id="id_materia" value="{{materia.id_materia}}" >
                            <label for="nombre"><i class="fas fa-user"></i> Nombre de materia</label>
                            <div class="relative">
                                {{#if modificar}}
                                    <input type="text" name="nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Nombre de materia" id="nombre" pattern="[a-zA-Z0-9\s]+" title="Nombre de materia" value="{{materia.nombre_materia}}" required>
                                {{else}}
                                    <input type="text" name="nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Nombre de materia" id="nombre" pattern="[a-zA-Z0-9\s]+" title="Nombre de materia"  required>
                                {{/if}}  
                            </div>

                            <label for="nomcor"><i class="fas fa-user"></i> Nombre corto</label>
                            <div class="relative">
                                {{#if modificar}}
                                    <input type="text" name="nomcor" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Nombre corto" id="nomcor" pattern="[a-zA-Z0-9\s]+" title="Nombre corto" value="{{materia.nombre_corto}}" required>
                                {{else}}
                                    <input type="text" name="nomcor" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Nombre corto" id="nomcor" pattern="[a-zA-Z0-9\s]+" title="Nombre corto"  required>
                                {{/if}}  
                            </div>




                            <label for="semestre"><i class="fas fa-user"></i> Semestre</label>
                            <div class="relative">
                                {{#if modificar}}
                                    <input type="text" name="semestre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Semestre" id="semestre" pattern="[a-zA-Z0-9\s]+" title="Semestre" value="{{materia.semestre}}" required>
                                {{else}}
                                    <input type="text" name="semestre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Semestre" id="semestre" pattern="[a-zA-Z0-9\s]+" title="Semestre" required>
                                {{/if}}  
                            </div>
                            <label for="horas"><i class="fas fa-user"></i> Horas</label>
                            <div class="relative">
                                {{#if modificar}}
                                    <input type="text" name="horas" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Horas" id="horas" pattern="[a-zA-Z0-9\s]+" title="Horas" value="{{materia.horas}}" required>
                                {{else}}
                                    <input type="text" name="horas" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Horas" id="horas" pattern="[a-zA-Z0-9\s]+" title="Horas" required>
                                {{/if}}  
                            </div>                            

                            
                            <div class="form-group">
                                <label for="academia"><i class="fas fa-user"></i> Academia</label>
                                <select id="academia" name="academia" class="border border-gray-200 w-full text-lg">
                                    {{#each academias}}
                                        {{#if ../modificar}}
                                            {{#if (isEqualInt this.id_academia ../materia.id_academia)}}
                                                <option value="{{this.id_academia}}" selected>{{this.nombre}}</option>
                                            {{else}}
                                                <option value="{{this.id_academia}}">{{this.nombre}}</option>
                                            {{/if}}
                                        {{else}}
                                            <option value="{{this.id_academia}}">{{this.nombre}}</option>
                                        {{/if}}
                                    {{/each}}
                                </select>
                            </div>
                            <br>

                            <div class="form-group">
                                <label for="status"><i class="fas fa-user"></i> Estatus</label>
                                <select id="status" name="status" class="border border-gray-200 w-full text-lg">
                                    {{#each status}}
                                        {{#if ../modificar}}
                                            {{#if (isEqualInt this.id_status ../materia.id_status)}}
                                                <option value="{{this.id_status}}" selected>{{this.descripcion}}</option>
                                            {{else}}
                                                <option value="{{this.id_status}}">{{this.descripcion}}</option>
                                            {{/if}}
                                        {{else}}
                                            <option value="{{this.id_status}}">{{this.descripcion}}</option>
                                        {{/if}}
                                    {{/each}}
                                </select>
                            </div>
                            <br>

                            {{#if error}}
                                <h4 style="text-align: center; color: red;">*{{{error}}}</h4>
                            {{/if}}

                            <button type="submit" class=" rounded-md bg-gray-500 w-full  text-white hover:bg-gray-600 focus:bg-gray-700 font-medium text-base px-6 py-3 block mt-4 mb-2 text-center" >Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
   
        </body>
    </html>
{{else}}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <h1 style="font-size: 3em;">La sesión ha expirado. Por favor, inicie la sesión nuevamente.</h1>
    </div>
{{/if}}